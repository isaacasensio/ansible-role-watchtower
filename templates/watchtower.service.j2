[Unit]
Description=watchtower
Requires=docker.service
After=docker.service

[Service]
Restart=always
User={{ watchtower_container_user }}
Group=docker
WorkingDirectory={{ watchtower_host_config_path }}
ExecStartPre=/usr/bin/docker compose -f {{ watchtower_host_config_path }}/docker-compose.yml down
ExecStart=/usr/bin/docker compose -f {{ watchtower_host_config_path }}/docker-compose.yml up
ExecStop=/usr/bin/docker compose -f {{ watchtower_host_config_path }}/docker-compose.yml down

[Install]
WantedBy=multi-user.target